<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pillar"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="98dp"
        android:text="Welcome to Kaso app"
        android:textColor="#FF5722"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/mBtnSms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mBtnSms"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#00BCD4"
        android:text="SMS"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/mBtnShare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvTitle" />

    <Button
        android:id="@+id/mBtnShare"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginBottom="26dp"
        android:backgroundTint="#00BCD4"
        android:text="Share"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/mBtnCall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mBtnCamera"
        app:layout_constraintTop_toBottomOf="@+id/mBtnSms" />

    <Button
        android:id="@+id/mBtnEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:backgroundTint="#00BCD4"
        android:text="Email"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mBtnMpesa"
        app:layout_constraintTop_toBottomOf="@+id/mBtnCall" />

    <Button
        android:id="@+id/mBtnMpesa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="38dp"
        android:backgroundTint="#00BCD4"
        android:text="Mpesa"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/mBtnWebsite"
        app:layout_constraintEnd_toStartOf="@+id/mBtnEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mBtnCall" />

    <Button
        android:id="@+id/mBtnCamera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:backgroundTint="#00BCD4"
        android:text="Camera"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/mBtnShare"
        app:layout_constraintEnd_toStartOf="@+id/mBtnShare"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/mBtnCall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:backgroundTint="#00BCD4"
        android:text="Call"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/mBtnMpesa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mBtnShare" />

    <Button
        android:id="@+id/mBtnWebsite"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginBottom="217dp"
        android:backgroundTint="#00BCD4"
        android:text="Website"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mBtnMpesa"
        app:layout_constraintTop_toBottomOf="@+id/mBtnMpesa" />

</androidx.constraintlayout.widget.ConstraintLayout>